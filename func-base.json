{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionBaseName": {
            "type": "string"
        },
        "functionPrefix": {
            "type": "string",
            "defaultValue": ""
        },
        "functionSuffix": {
            "type": "string",
            "defaultValue": ""
        },
        "appSettings": {
            "type": "array",
            "defaultValue": [
                {
                    "name": "one",
                    "value": "ett"
                },
                {
                    "name": "two",
                    "value": "tva"
                },
                {
                    "name": "three",
                    "value": "tre"
                }
            ]
        }
    },
    "functions": [],
    "variables": {
        "functionBaseName": "[concat(parameters('functionPrefix'), parameters('functionBaseName'))]",
        "name": "[concat(variables('functionBaseName'), parameters('functionSuffix'))]",
        "hostingPlanName": "[concat(variables('functionBaseName'), '-hosting')]",
        "storageAccountName": "[replace(concat(variables('functionBaseName'), 'sta'), '-', '')]",
        "applicationInsightsName": "[concat(variables('functionBaseName'), '-insights')]",
        "defaultAppSettings": [
            {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~3"
            },
            {
                "name": "FUNCTIONS_WORKER_RUNTIME",
                "value": "dotnet"
            },
            {
                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                "value": "[concat('ref:','microsoft.insights/components/', variables('applicationInsightsName'))]"
            },
            {
                "name": "AzureWebJobsStorage",
                "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=','test',';EndpointSuffix=','core.windows.net')]"
            },
            {
                "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=','test',';EndpointSuffix=','core.windows.net')]"
            },
            {
                "name": "WEBSITE_CONTENTSHARE",
                "value": "[toLower(variables('name'))]"
            }
        ]
    },
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[variables('name')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('microsoft.insights/components/', variables('applicationInsightsName'))]",
                "[concat('Microsoft.Web/serverfarms/', variables('hostingPlanName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]"
            ],
            "properties": {
                "name": "[variables('name')]",
                "siteConfig": {
                    "copy": [
                        {
                            "name": "appSettings",
                            "count": "[length(variables('defaultAppSettings'))]",
                            "input": {
                                "name": "[variables('defaultAppSettings')[copyIndex('appSettings')].name]",
                                "value": "[if(startsWith(variables('defaultAppSettings')[copyIndex('appSettings')].value, 'ref:'), reference(substring(variables('defaultAppSettings')[copyIndex('appSettings')].value, 3), '2015-05-01').InstrumentationKey, variables('defaultAppSettings')[copyIndex('appSettings')].value)]"
                            }
                        }
                    ]
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
            }
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[variables('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "kind": "",
            "tags": {},
            "dependsOn": [],
            "properties": {
                "name": "[variables('hostingPlanName')]"
            },
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y"
            }
        },
        {
            "apiVersion": "2020-02-02",
            "name": "[variables('applicationInsightsName')]",
            "type": "microsoft.insights/components",
            "location": "[resourceGroup().location]",
            "kind": "other",
            "properties": {
                "ApplicationId": "[variables('name')]",
                "Request_Source": "IbizaWebAppExtensionCreate",
                "Flow_Type": "Redfield",
                "Application_Type": "other",
                "RetentionInDays": 90
            }
        },
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2"
            }
        }
    ],
    "outputs": {}
}
