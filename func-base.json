{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionBaseName": {
            "type": "string"
        },
        "functionPrefix": {
            "type": "string",
            "defaultValue": ""
        },
        "functionSuffix": {
            "type": "string",
            "defaultValue": ""
        },
        "functionCustomAppSettings": {
            "type": "array",
            "defaultValue": []
        }
    },
    "variables": {
        "functionBaseName": "[concat(parameters('functionPrefix'), parameters('functionBaseName'))]",
        "name": "[concat(variables('functionBaseName'), parameters('functionSuffix'))]",
        "storageAccountName": "[replace(concat(variables('functionBaseName'), 'sta'), '-', '')]",
        "applicationInsightsName": "[concat(variables('functionBaseName'), '-insights')]",

        "FUNC_DEFAULTS": [
            {
                "name": "FUNCTIONS_EXTENSION_VERSION",
                "value": "~3"
            },
            {
                "name": "FUNCTIONS_WORKER_RUNTIME",
                "value": "dotnet"
            },
            {
                "name": "WEBSITE_CONTENTSHARE",
                "value": "[toLower(variables('name'))]"
            }
        ]
    },
    "resources": [
        {
            "apiVersion": "2020-12-01",
            "name": "[variables('name')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'appInsights')]",
                "[resourceId('Microsoft.Resources/deployments', 'storage')]"
            ],
            "properties": {
                "name": "[variables('name')]",
                "siteConfig": {
                    "appSettings": "[union(parameters('functionCustomAppSettings'), variables('FUNC_DEFAULTS'), createArray(reference('storage').outputs.AzureWebJobsStorage.value, reference('storage').outputs.WEBSITE_CONTENTAZUREFILECONNECTIONSTRING.value, reference('appInsights').outputs.APPINSIGHTS_INSTRUMENTATIONKEY.value))]"
                }
            }
        },
        {
            "name": "storage",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Fjeddo/arm-linked-templates-lab/develop/storage.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[variables('storageAccountName')]"
                    }
                }
            }
        },
        {
            "name": "appInsights",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Fjeddo/arm-linked-templates-lab/develop/appInsights.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[variables('applicationInsightsName')]"
                    }
                }
            }
        }
    ]
}
