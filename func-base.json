{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionBaseName": {
            "type": "string"
        },
        "functionPrefix": {
            "type": "string",
            "defaultValue": ""
        },
        "functionSuffix": {
            "type": "string",
            "defaultValue": ""
        },
        "functionCustomAppSettings": {
            "type": "array",
            "defaultValue": []
        }
    },
    "functions": [],
    "variables": {
        "functionBaseName": "[concat(parameters('functionPrefix'), parameters('functionBaseName'))]",
        "name": "[concat(variables('functionBaseName'), parameters('functionSuffix'))]",
        "storageAccountName": "[replace(concat(variables('functionBaseName'), 'sta'), '-', '')]",
        "applicationInsightsName": "[concat(variables('functionBaseName'), '-insights')]",

        "FUNCTIONS_EXTENSION_VERSION": {"name":"FUNCTIONS_EXTENSION_VERSION","value":"~3"}
    },
    "resources": [
        {
            "apiVersion": "2020-12-01",
            "name": "[variables('name')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'appInsights')]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ],
            "properties": {
                "name": "[variables('name')]",
                "siteConfig": {
                    "appSettings": "[union(parameters('functionCustomAppSettings'), 
                    createArray(
                        json(string(variables('FUNCTIONS_EXTENSION_VERSION'))), json('{\"name\": \"FUNCTIONS_WORKER_RUNTIME\", \"value\": \"dotnet\"}'),                                                 json(reference('appInsights').outputs.InstrumentationKey.value),                                                 json(concat('{\"name\": \"AzureWebJobsStorage\", \"value\": \"', concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2021-04-01').keys[0].value,';EndpointSuffix=','core.windows.net'),'\"}')),                                                json(concat('{\"name\": \"WEBSITE_CONTENTAZUREFILECONNECTIONSTRING\", \"value\": \"',concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2021-04-01').keys[0].value,';EndpointSuffix=','core.windows.net'),'\"}')),                                                 json(concat('{\"name\": \"WEBSITE_CONTENTSHARE\", \"value\": \"', toLower(variables('name')),'\"}'))))]"
                }
            }
        },
        {
            "apiVersion": "2021-04-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            },
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2"
            }
        },
        {
            "name": "appInsights",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "Inner"
                },
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/Fjeddo/arm-linked-templates-lab/develop/appInsights.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[variables('applicationInsightsName')]"
                    }
                }
            }
        }
    ]
}
